<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/coolBlue"

    >
<ScrollView
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="500dp"
    android:layout_height="match_parent"
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="0dp"
    android:background="@android:color/white"
    android:layout_marginStart="12dp"
    android:layout_marginEnd="12dp"
    android:layout_marginTop="12dp"
    android:foregroundGravity="center_horizontal"
    >
  <!--  android:layout_marginTop="?attr/actionBarSize"> -->

    <android.support.constraint.ConstraintLayout
        android:id="@+id/constraint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginBottom="1dp"
        android:layout_gravity="center_horizontal"
        >

        <EditText
            android:id="@+id/plain_text_input4"
            android:layout_width="242dp"
            android:layout_height="54dp"
            android:layout_marginEnd="58dp"
            android:layout_marginStart="60dp"
            android:layout_marginTop="21dp"
            android:hint="Title"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView" />

        <EditText
            android:id="@+id/plain_text_input2"
            android:layout_width="240dp"
            android:layout_height="53dp"
            android:layout_marginEnd="60dp"
            android:layout_marginStart="60dp"
            android:layout_marginTop="16dp"
            android:hint="Address City, State"
            android:inputType="text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/plain_text_input" />

        <EditText
            android:id="@+id/plain_text_input"
            android:layout_width="242dp"
            android:layout_height="54dp"
            android:layout_marginEnd="58dp"
            android:layout_marginStart="60dp"
            android:layout_marginTop="25dp"
            android:hint="Date: MM-DD-YYYY"
            android:inputType="text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/plain_text_input4" />

        <EditText
            android:id="@+id/plain_text_input3"
            android:layout_width="240dp"
            android:layout_height="132dp"
            android:layout_marginEnd="60dp"
            android:layout_marginStart="60dp"
            android:layout_marginTop="15dp"
            android:gravity="top|left"
            android:hint="Details"
            android:inputType="text|textMultiLine"
            android:isScrollContainer="true"
            android:singleLine="false"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/plain_text_input2" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="230dp"
            android:layout_height="233dp"
            android:layout_marginEnd="70dp"
            android:layout_marginStart="60dp"
            android:layout_marginTop="16dp"
            android:elevation="3dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@android:color/background_light" />

        <ImageButton
            android:id="@+id/button"
            android:layout_width="84dp"
            android:layout_height="84dp"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:background="#ffffff"
            android:elevation="3dp"
            app:layout_constraintBottom_toBottomOf="@+id/imageView"
            app:layout_constraintEnd_toEndOf="@+id/imageView"
            app:layout_constraintStart_toStartOf="@+id/imageView"
            app:layout_constraintTop_toTopOf="@+id/imageView"
            app:srcCompat="@drawable/ic_upload_image" />

        <Button
            android:id="@+id/button3"
            android:layout_width="301dp"
            android:layout_height="48dp"
            android:layout_marginEnd="29dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="11dp"
            android:background="#4859b6"
            android:text="Upload"
            android:textColor="@android:color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/plain_text_input3" />

    </android.support.constraint.ConstraintLayout>
</ScrollView>

</RelativeLayout>